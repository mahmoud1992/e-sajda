<?xml version="1.0" encoding="utf-8"?>
<resources>


	<style name="AppBaseTheme" parent="android:Theme.Holo.Light">
		<!-- API 14 theme customizations can go here. -->
	</style>
	<!-- Application theme. -->
	<style name="AppThemeNew" parent="AppBaseTheme">

	</style>
	<style name="row_text">
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:fadingEdge">horizontal</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
	</style>


	<style name="row_text_small">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:fadingEdge">horizontal</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
	</style>

	<style name="main_info">
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:fadingEdge">horizontal</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
	</style>

	<style name="hint">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:fadingEdge">horizontal</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
	</style>

	<style name="detail_key">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="detail_value">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>

	<style name="navigation_title">
		<item name="android:textSize">@dimen/large_font_size</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:fadingEdge">horizontal</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="navigation_description">
		<item name="android:fadingEdge">horizontal</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="flat_white">
		<item name="android:fadingEdge">horizontal</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
		<item name="android:textColor">@color/white</item>
	</style>



	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/md_red_500</item>
		<item name="colorPrimaryDark">@color/md_red_800</item>
		<item name="colorAccent">@color/md_red_800</item>
		<item name="android:windowBackground">@color/md_grey_100</item>
		<item name="android:colorControlHighlight">@color/heighlight_color</item>

	</style>


	<style name="AppTheme.Splash" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/md_red_500</item>
		<item name="colorPrimaryDark">@color/md_red_800</item>
		<item name="colorAccent">@color/md_red_800</item>
		<item name="android:windowBackground">@color/md_grey_200</item>
		<item name="android:colorControlHighlight">@color/heighlight_color</item>
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>


	<style name="AppTheme.Edit" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/md_red_500</item>
		<item name="colorPrimaryDark">@color/md_red_800</item>
		<item name="colorAccent">@color/md_red_800</item>
		<item name="android:windowBackground">@color/md_grey_200</item>
		<item name="android:colorControlHighlight">@color/heighlight_color</item>
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>


</resources>
