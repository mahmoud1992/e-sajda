<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:text="@string/ServiceUUID" android:textSize="60px"/>

    <EditText
        android:id="@+id/edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_textbox"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:text="@string/enter_text" android:inputType="text" android:textSize="55px" android:textColor="#cccccc" android:textStyle="italic"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:text="@string/TxUUID" android:textSize="60px"/>

    <EditText
        android:id="@+id/edittext2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="11dp"
        android:background="@drawable/layout_textbox"
        android:ems="10"
        android:text="@string/enter_text" android:inputType="text" android:textSize="55px" android:textColor="#cccccc" android:textStyle="italic"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:text="@string/RxUUID" android:textSize="60px"/>

    <EditText
        android:id="@+id/edittext3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="11dp"
        android:background="@drawable/layout_textbox"
        android:ems="10"
        android:text="@string/enter_text" android:inputType="text" android:textSize="55px" android:textColor="#cccccc" android:textStyle="italic"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext3"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="20dp"
        android:text="@string/DISUUID1" android:textSize="60px"/>

    <EditText
        android:id="@+id/edittext4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext3"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/layout_textbox"
        android:ems="10"
        android:text="@string/enter_text" android:inputType="text" android:textSize="55px" android:textColor="#cccccc" android:textStyle="italic"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext4"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="20dp"
        android:text="@string/DISUUID2" android:textSize="60px" />

    <EditText
        android:id="@+id/edittext5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext4"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/layout_textbox"
        android:ems="10"
        android:text="@string/enter_text" android:inputType="text" android:textSize="55px" android:textColor="#cccccc" android:textStyle="italic"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="15dp"
        android:width="150dp"
        android:height="20dp"
        android:background="@drawable/layout_button"
        android:text="Apply" android:gravity="center"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext5"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="175dp"
        android:width="150dp"
        android:height="20dp"
        android:background="@drawable/layout_button"
        android:text="Reset" android:gravity="center" />
</RelativeLayout>
    </ScrollView>
